<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xu.roomhunter.RoomDetailActivity"
    tools:showIn="@layout/activity_room_detail">

    <TextView
        android:id="@+id/roomIDView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:text="Details for Property at Loc" />

    <TextView
        android:id="@+id/bedroomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomIDView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="numberOfBedrooms" />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bedroomView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="pricedisplayedhere" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/recycler"
        android:layout_below="@+id/priceView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Interested individuals" />

    <Button
        android:id="@+id/btnInterested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="I'm Interested" />
</RelativeLayout>
